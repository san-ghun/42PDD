doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title devoom
        link(rel="stylesheet", href="https://unpkg.com/@picocss/pico@1.*/css/pico.min.css")
    body 
        main
            div#welcome.container
                article
                    header
                        div.headings
                            h1 Devoom
                            h3 A peer-to-peer debugging session
                    form 
                        label(for="roomname") Room name
                            input(placeholder="Enter the room name", required, type="text")
                            small Create a new room or enter the specific room with room name.
                        button(type="submit") Enter room
                    footer Footer


            div#call.container
                div.grid
                    div#peersStream
                        video#peersFace(autoplay, playsinline, width="100%", height="100%")
                    div#myStream
                        video#myFace(autoplay, playsinline, width="100%", height="100%")
                article
                    div.grid
                        button#mute Mute
                        button#camera Camera Off
                    select#cameras 
            
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 