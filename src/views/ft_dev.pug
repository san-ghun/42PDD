                                li 
                                    kbd Whiteboard ðŸŽ¨ 
                                li
                                    a(href="https://excalidraw.com/", target="_blank") Excalidraw
                                li
                                    a(href="https://webwhiteboard.com/", target="_blank") WebWhiteboard
                    li
                        button(role="button")#chat.outline Open Chat

            div.grid
                div#peersVideo(data-tooltip="When peer join, Right-click and use pip mode for convenience")
                    small 
                    video#peersFace(autoplay, playsinline, width="100%", height="100%")
                div#myVideo
                    video#myFace(autoplay, playsinline, width="100%", height="100%")
                    small 
        
            div.container#chat-wrapper(style={display: 'none'})
                div#chat-content-wrapper
                    ul
                form#chat-input
                    textarea(placeholder="Press Enter To Send Message", required)

            article
                div.grid
                    button#mic Mic.
                    button#camera Camera
                div.grid
                    label(for="audio_input") Audio input
                        select#audios 
                    label(for="video_input") Video input    
                        select#cameras 
